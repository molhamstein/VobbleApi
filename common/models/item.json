{
  "name": "item",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "replaceOnPUT": false,
  "scope": {
    "include": [{
        "relation": "owner"
      },
      {
        "relation": "product"
      },
      {
        "relation": "relatedUser"
      }
    ]
  },
  "properties": {
    "storeType": {
      "type": "string"
    },
    "storeToken": {
      "type": "string"
    },
    "isConsumed": {
      "type": "boolean"
    },
    "valid": {
      "type": "boolean"
    },
    "startAt": {
      "type": "date",
      "required": true,
      "defaultFn": "now"
    },
    "endAt": {
      "type": "date"
    },
    "price": {
      "type": "number",
      "required": true
    },
    "type": {
      "type": "string",
      "default": "normal"
    },
    "typePurchasing": {
      "type": "string",
      "default": "creditcard"
    },
    "transactionId": {
      "type": "string"
    },
    "receipt": {
      "type": "string"
    }

  },
  "validations": [],
  "relations": {
    "product": {
      "type": "belongsTo",
      "model": "product",
      "foreignKey": "productId"
    },
    "owner": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "ownerId"
    },
    "relatedUser": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "relatedUserId"
    }
  },
  "acls": [{
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY",
      "property": "buyProductByCoins"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "buyProductByCoins"
    }
  ],
  "methods": {
    "countFilter": {
      "accepts": [{
        "arg": "filter",
        "type": "object",
        "required": true,
        "description": "filter item"
      }],
      "returns": [{
        "arg": "result",
        "type": "object",
        "root": true,
        "description": ""
      }],
      "description": "",
      "http": [{
        "path": "/countItem",
        "verb": "get"
      }]
    },
    "getFilterItem": {
      "accepts": [{
        "arg": "filter",
        "type": "object",
        "required": false,
        "description": "filter Item"
      }],
      "returns": [{
        "arg": "result",
        "type": "object",
        "root": true,
        "description": ""
      }],
      "description": "filter On the Item",
      "http": [{
        "path": "/filterItem",
        "verb": "get"
      }]
    },
    "buyProductByCoins": {
      "accepts": [{
        "arg": "productId",
        "type": "string",
        "required": true
      }, {
        "arg": "relatedUserId",
        "type": "string"
      }, {
        "arg": "context",
        "type": "object",
        "http": {
          "source": "context"
        }
      }],
      "returns": [{
        "arg": "result",
        "type": "object",
        "root": true,
        "description": ""
      }],
      "description": "buy product by coins",
      "http": [{
        "path": "/buyProductByCoins",
        "verb": "post"
      }]
    },

