{
  "name": "item",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "replaceOnPUT": false,
  "scope": {
    "include": [{
        "relation": "owner"
      },
      {
        "relation": "product"
      }
    ]
  },
  "properties": {
    "storeType": {
      "type": "string",
      "required": true
    },
    "storeToken": {
      "type": "string",
      "required": true
    },
    "isConsumed": {
      "type": "boolean",
      "required": true
    },
    "valid": {
      "type": "boolean",
      "required": true
    },
    "startAt": {
      "type": "date",
      "required": true,
      "defaultFn": "now"
    },
    "endAt": {
      "type": "date"
    },
    "price": {
      "type": "number",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "product": {
      "type": "belongsTo",
      "model": "product",
      "foreignKey": "productId"
    },
    "owner": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "ownerId"
    }
  },
  "acls": [],
  "methods": {
    "countFilter": {
      "accepts": [{
        "arg": "filter",
        "type": "object",
        "required": true,
        "description": "filter item"
      }],
      "returns": [{
        "arg": "result",
        "type": "object",
        "root": true,
        "description": ""
      }],
      "description": "",
      "http": [{
        "path": "/countItem",
        "verb": "get"
      }]
    },
    "getFilterItem": {
      "accepts": [{
        "arg": "filter",
        "type": "object",
        "required": false,
        "description": "filter Item"
      }],
      "returns": [{
        "arg": "result",
        "type": "object",
        "root": true,
        "description": ""
      }],
      "description": "filter On the Item",
      "http": [{
        "path": "/filterItem",
        "verb": "get"
      }]
    },
    "itemStateReport": {
      "accepts": [{
          "arg": "from",
          "type": "date",
          "required": false,
          "description": ""
        },
        {
          "arg": "to",
          "type": "date",
          "required": false,
          "description": ""
        }
      ],
      "returns": [{
        "arg": "result",
        "type": "array",
        "root": true,
        "description": ""
      }],
      "description": "",
      "http": [{
        "path": "/itemStateReport",
        "verb": "get"
      }]
    },
    "export": {
      "accepts": [{
        "arg": "filter",
        "type": "object",
        "required": false,
        "description": "filter Item"
      }],
      "returns": [{
        "arg": "result",
        "type": "object",
        "root": true,
        "description": ""
      }],
      "description": "Export To Excel",
      "http": [{
        "path": "/export",
        "verb": "get"
      }]
    }
  }
}
