{
  "name": "item",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "scope": {
    "include": [{
        "relation": "owner"
      },
      {
        "relation": "product"
      }
    ]
  },
  "properties": {
    "storeType": {
      "type": "string",
      "required": true
    },
    "storeToken": {
      "type": "string",
      "required": true
    },
    "isConsumed": {
      "type": "boolean",
      "required": true
    },
    "valid": {
      "type": "boolean",
      "required": true
    },
    "startAt": {
      "type": "date",
      "required": true,
      "defaultFn": "now"
    },
    "endAt": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {
    "product": {
      "type": "belongsTo",
      "model": "product",
      "foreignKey": "productId"
    },
    "owner": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "ownerId"
    }
  },
  "acls": [],
  "methods": {
    "getFilterItem": {
      "accepts": [{
        "arg": "filter",
        "type": "object",
        "required": false,
        "description": "filter Item"
      }],
      "returns": [{
        "arg": "result",
        "type": "object",
        "root": true,
        "description": ""
      }],
      "description": "filter On the Item",
      "http": [{
        "path": "/filterItem",
        "verb": "get"
      }]
    }
  }
}
