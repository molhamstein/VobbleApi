{
  "name": "product",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "scope": {
    "include": [{
      "relation": "typeGoods"
    }]
  },
  "properties": {
    "name_ar": {
      "type": "string",
      "required": true
    },
    "name_en": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "number",
      "required": true
    },
    "price_coins": {
      "type": "number",
      "required": true,
      "default": 0
    },
    "description_ar": {
      "type": "string",
      "required": true
    },
    "description_en": {
      "type": "string",
      "required": true
    },
    "bottleCount": {
      "type": "number"
    },
    "replyCount": {
      "type": "number"
    },
    "coinsCount": {
      "type": "number"
    },
    "validity": {
      "type": "number"
    },
    "description": {
      "type": "string"
    },
    "icon": {
      "type": "string",
      "required": true
    },
    "androidProduct": {
      "type": "string"
    },
    "appleProduct": {
      "type": "string"
    },
    "productSold": {
      "type": "number",
      "default": 0
    },
    "type": {
      "type": "string",
      "default": "normal"
    }
  },
  "validations": [],
  "relations": {
    "typeGoods": {
      "type": "belongsTo",
      "model": "typeGoods",
      "foreignKey": "typeGoodsId"
    },
    "items": {
      "type": "hasMany",
      "model": "item",
      "foreignKey": "productId"
    }
  },
  "acls": [],
  "methods": {}
}
