{
  "name": "product",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "scope": {
    "include": [
      {
        "relation": "typeGoods"
      }
    ]
  },
  "properties": {
    "name_ar": {
      "type": "string",
      "required": true
    },
    "name_en": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "string",
      "required": true
    },
    "bottleCount": {
      "type": "number"
    },
    "validity": {
      "type": "number"
    },
    "description": {
      "type": "string",
      "required": true
    },
    "icon": {
      "type": "string",
      "required": true
    },
    "androidProduct": {
      "type": "string"
    },
    "appleProduct": {
      "type": "string"
    },
    "productSold": {
      "type": "number",
      "default": 0
    }
  },
  "validations": [],
  "relations": {
    "typeGoods": {
      "type": "belongsTo",
      "model": "typeGoods",
      "foreignKey": "typeGoodsId"
    },
    "items": {
      "type": "hasMany",
      "model": "item",
      "foreignKey": "productId"
    }
  },
  "acls": [],
  "methods": {}
}
