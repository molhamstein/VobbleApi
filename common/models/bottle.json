      "accepts": [{
        "arg": "filter",
        "type": "object",
        "required": false,
        "description": "filter bottle"
      }],
      "returns": [{
        "arg": "result",
        "type": "object",
        "root": true,
        "description": ""
      }],
      "description": "filter On the bottle",
      "http": [{
        "path": "/filterBottle",
        "verb": "get"
